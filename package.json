{
  "name": "iban-ts",
  "version": "0.3.0",
  "description": "A TypeScript library for validating, formatting, and converting IBAN (International Bank Account Number) and BBAN (Basic Bank Account Number), offering comprehensive support for international banking data standards.",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/mylib.esm.js",
  "typings": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/iban-ts.esm.js",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "analyze": "size-limit --why",
    "build": "dts build",
    "lint": "dts lint",
    "prepare": "dts build",
    "size": "size-limit",
    "start": "dts watch",
    "test": "dts test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "dts lint"
    }
  },
  "prettier": {
    "printWidth": 120,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "peerDependencies": {},
  "author": "Altrim Beqiri",
  "repository": "https://github.com/altrim/iban.js",
  "size-limit": [
    {
      "path": "dist/iban.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/iban.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "11.0.1",
    "@tsconfig/recommended": "1.0.3",
    "dts-cli": "2.0.3",
    "husky": "8.0.3",
    "size-limit": "11.0.1",
    "tslib": "2.6.2",
    "typescript": "5.3.3"
  }
}
